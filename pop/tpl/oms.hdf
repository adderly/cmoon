# Dataset := oms.Dataset
# : link := copy
# overwrite linke will overwrite original node
# copy can't be deep
# so, done partly
oms [merge = oms.pub] {
	Layout = layout.html
	Dataset {
        Layout {
			css = <link rel="stylesheet" type="text/css" href="/css/b/oms.css" />
			js = <script type="text/javascript" src="/js/b/oms.js"></script>
			title = Oh, My Site
			actionpart = 0
        }
		Include {
			content = oms/oms.html
		}
	}
}

